{
    "name": "daniel-km/omeka-s-module-universalviewer",
    "type": "omeka-s-module",
    "description": "Module for Omeka S: Integrates the Universal Viewer in order to create carousels of virtual books from image files and to display any media file (pdf, audio, video, 3Dâ€¦) in a unified player.",
    "keywords": [
        "Omeka S",
        "Omeka S module",
        "viewer",
        "book",
        "digital library"
    ],
    "license": "CECILL-2.1",
    "homepage": "https://gitlab.com/Daniel-KM/Omeka-S-module-UniversalViewer",
    "authors": [
        {
            "name": "Daniel Berthereau",
            "email": "Daniel.packagist@Berthereau.net"
        }
    ],
    "support": {
        "issues": "https://gitlab.com/Daniel-KM/Omeka-S-module-UniversalViewer/-/issues",
        "forum": "https://forum.omeka.org/"
    },
    "_require (not set until Omeka S merges PR #2412)": {
        "omeka/omeka-s": "^4.1",
        "daniel-km/omeka-s-module-common": "*"
    },
    "require": {
        "sempia/external-assets": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "UniversalViewer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UniversalViewerTest\\": "tests/UniversalViewerTest/"
        }
    },
    "scripts": {
        "post-install-cmd": "@build",
        "post-update-cmd": "@build",
        "build": [
            "# Update css file for French in uv2.",
            "sed -i -e 's~113px~124px~' asset/vendor/uv2/themes/uv-fr-FR-theme/css/uv-seadragon-extension/theme.css"
        ]
    },
    "config": {
        "allow-plugins": {
            "sempia/external-assets": true
        }
    },
    "extra": {
        "installer-name": "UniversalViewer",
        "configurable": true,
        "external-assets": {
            "asset/vendor/uv2/": "https://github.com/Daniel-KM/Omeka-S-module-UniversalViewer/releases/download/3.6.4.4/uv-2.0.2.tar.gz",
            "asset/vendor/uv3/": "https://github.com/Daniel-KM/Omeka-S-module-UniversalViewer/releases/download/3.6.6/uv-3.1.2.zip",
            "asset/vendor/uv/": "https://github.com/Daniel-KM/Omeka-S-module-UniversalViewer/releases/download/3.6.12-4.2.1/uv-4.2.1.tar.gz"
        }
    }
}
